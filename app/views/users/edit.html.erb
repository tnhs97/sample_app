<% provide :title, t("edit_title") %>
<% provide :button_text, t("edit_submit") %>

<h1><%= t "edit_html" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("change_gravatar"), "http://gravatar.com/emails", 
        target: "_blank", rel: "noopener" %>
    </div>
  </div>
</div>
